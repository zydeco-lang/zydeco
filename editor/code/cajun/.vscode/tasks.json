// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"group": "build",
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc-watch"
			]
		},
		{
			"label": "cargo build",
			"type": "shell",
			"command": "unset ARGV0 && cargo build -p cajun",
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "cargo build and npm watch",
			"dependsOn": [
				"cargo build",
				{
					"type": "npm",
					"script": "watch",
				}
			],
		}
	]
}

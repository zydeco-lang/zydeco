{
  "name": "cajun-zydeco-language-server",
  "displayName": "Zydeco Language Server",
  "description": "LSP support for Zydeco",
  "license": "MIT",
  "version": "0.0.16",
  "keywords": [
    "Zydeco",
    "language-server",
    "tower-lsp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zydeco-lang/zydeco"
  },
  "publisher": "LitiaEeloo",
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.66.0"
  },
  "enabledApiProposals": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zydeco",
        "aliases": [
          "Zydeco",
          "zydeco"
        ],
        "extensions": [
          "zy",
          "zydeco"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zydeco",
        "scopeName": "source.zydeco",
        "path": "./syntaxes/zydeco.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "zydeco-language-server",
      "properties": {
        "zydeco-language-server.server.path": {
          "type": "string",
          "scope": "machine",
          "default": "",
          "description": "Path to the Zydeco language server executable. Leave empty to use PATH or SERVER_PATH."
        },
        "zydeco-language-server.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Zydeco language server."
        }
      }
    }
  },
  "scripts": {
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "test-compile": "tsc -p ./",
    "compile": "cross-env NODE_ENV=production tsc -b",
    "watch": "rm -rf dist && tsc -b -w",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "build": "webpack --config webpack.config.js",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.9",
    "@types/vscode": "^1.108.1",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vscode/test-electron": "^2.5.2",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "5.4.5",
    "vscode-uri": "^3.1.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "packageManager": "pnpm@9.13.2+sha512.88c9c3864450350e65a33587ab801acf946d7c814ed1134da4a924f6df5a2120fd36b46aab68f7cd1d413149112d53c7db3a4136624cfd00ff1846a0c6cef48a"
}

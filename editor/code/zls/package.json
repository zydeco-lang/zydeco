{
  "name": "zls",
  "displayName": "zls",
  "description": "A zydeco language support.",
  "version": "0.0.11",
  "engines": {
    "vscode": "^1.87.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zydeco-lang/zydeco"
  },
  "publisher": "LitiaEeloo",
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zydeco",
        "aliases": [
          "Zydeco",
          "zydeco"
        ],
        "extensions": [
          ".zy",
          ".zydeco"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zydeco",
        "scopeName": "source.zydeco",
        "path": "./syntaxes/zydeco.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --target=node20",
    "compile": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch",
    "check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/vscode": "^1.87.0",
    "esbuild": "^0.20.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
